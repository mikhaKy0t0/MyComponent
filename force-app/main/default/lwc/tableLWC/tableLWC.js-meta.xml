<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="chosenObject" type="String" label="Choose Object"
            description="Choose Object to show related records" default="contact"/>
            <property name="fieldsToQuery" type="String" label="Put Fields to Apex Query"
                    description="only API Name here. Check it twice" default="Name, Email, Phone"/>
            <property name="fieldsToDisplay" type="String" label="Put fields to table header" default="Имя, Email, Телефон"/>
            <property name="orderField" type="String" label="Put field to sorting" default="Name"/>
            <property name="direction" type="String" default="ASC"/>
            <property name="datFormat" type="String" label="Put format to display data" default="none, none, none, none"/>
        </targetConfig> 
    </targetConfigs>
</LightningComponentBundle>